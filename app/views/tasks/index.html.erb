<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      <%= @current_user.username %> - All Tasks
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new task
    </h2>

    <form action="/insert_task" method="post">
      <div class="form-group">
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="description_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="category_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="priority_box">
          Priority
        </label>

        <input type="text" id="priority_box" name="priority_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="deadline_box">
          Deadline
        </label>

        <input type="text" id="deadline_box" name="deadline_from_query" class="form-control">
      </div>

      <div class="custom-control custom-checkbox mb-3">
        <input type="checkbox" class="custom-control-input" id="completed_box" name="completed_from_query" value="1">

        <label class="custom-control-label" for="completed_box">Completed</label>
      </div>


      <div class="form-group">
        <label for="duration_box">
          Duration
        </label>

        <input type="text" id="duration_box" name="duration_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create task
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Category
        </th>

        <th>
          Priority
        </th>

        <th>
          Deadline
        </th>

        <th>
          Completed
        </th>

        <th>
          User
        </th>

        <th>
          Duration
        </th>

        <th>
        </th>
      </tr>

      <% @tasks.each do |task| %>
      <tr>
        <td>
          <%= task.id %>
        </td>

        <td>
          <%= task.description %>
        </td>

        <td>
          <%= task.category %>
        </td>

        <td>
          <%= task.priority %>
        </td>

        <td>
          <%= task.deadline %>
        </td>

        <td>
          <%= task.completed %>
        </td>

        <td>
          <%= task.user_id %>
        </td>

        <td>
          <%= task.duration %>
        </td>

        <td>
          <a href="/tasks/<%= task.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
