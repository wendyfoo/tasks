<h1>Hi <%= @user.username %>!</h1>
<br>
<h2>This is what you should do:</h2>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Category
        </th>

        <th>
          Priority
        </th>

        <th>
          Deadline
        </th>

        <th>
          Completed
        </th>

        <th>
          User
        </th>

        <th>
          Duration
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @task_list.each do |task| %>
      <tr>
        <td>
          <%= task.id %>
        </td>

        <td>
          <%= task.description %>
        </td>

        <td>
          <%= task.category %>
        </td>

        <td>
          <%= task.priority %>
        </td>

        <td>
          <%= task.deadline %>
        </td>

        <td>
          <%= task.completed %>
        </td>

        <td>
          <%= task.user_id %>
        </td>

        <td>
          <%= task.duration %>
        </td>

        <td>
          <%= time_ago_in_words(task.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(task.updated_at) %> ago
        </td>

        <td>
          <a href="/tasks/<%= task.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>